<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/layout_title"/>

        <ImageView
            android:layout_marginTop="40dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/img_logo"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="设置密码"
            android:textSize="18dp"
            android:textColor="@color/theme"
            />

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="12dp"
        >
        <TextView
        android:id="@+id/panpan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请设置您的密码："
        android:textSize="20sp"
        android:textColor="#000"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:minHeight="50dp"
        android:paddingLeft="14dp"
        android:paddingRight="12dp"
        >

        <EditText
            android:maxLength="10"
            android:background="@drawable/rect"
            android:id="@+id/et_set_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:hint="密码要包含大小写字母和和数字才安全哦"
            android:paddingTop="8dp"
            android:textColorHint="#BEBEBE"
            android:textSize="15sp"
            />
        <Button
            android:id="@+id/btn_delete"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="5dp"
            android:visibility="invisible"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:minHeight="50dp"
        android:paddingLeft="14dp"
        android:paddingRight="12dp"
        >

        <EditText
            android:background="@drawable/rect"
            android:maxLength="10"
            android:id="@+id/et_set_second_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:hint="请您再次输入密码"
            android:paddingTop="8dp"
            android:textColorHint="#BEBEBE"
            android:textSize="15sp"
            />
        <Button
            android:id="@+id/btn_second_delete"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="5dp"
            android:visibility="invisible"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp">

        <Button
            android:id="@+id/btn_register_password"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp"
            android:background="@drawable/selector_button_login"
            android:text="开启盼盼家之旅"
            android:textColor="#fff"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/img_bottom_view" />
    </RelativeLayout>

</LinearLayout>

