<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:minHeight="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="12dp"
        >


        <TextView
            android:id="@+id/repair_detailinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="报修详情"
            android:textSize="20dp"
            />
        <TextView
            android:layout_toRightOf="@id/repair_detailinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingLeft="93dp"
            android:textColor="#ff9800"
            android:textSize="17dp"
            android:text="确定"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="130dp"
        android:minHeight="60dp"
        android:paddingLeft="60dp"
        >

        <ImageView
            android:id="@+id/imv_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="18dp"
            android:layout_marginEnd="69dp"
            android:layout_marginRight="69dp"
            android:paddingLeft="13dp"
            android:src="@drawable/waitforprocess"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:minHeight="50dp"
        android:paddingLeft="37dp"
        android:paddingRight="12dp"

        >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="报修待处理"
            android:paddingLeft="95dp"
            android:textSize="20sp"
            />

    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@drawable/line2"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:minHeight="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="12dp"
        android:paddingTop="15dp"
        >
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="报修时间"
            android:textSize="15sp"

            />

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="92dp"
            android:layout_marginStart="92dp"
            android:textSize="15sp"
            android:paddingLeft="20dp"
            android:paddingTop="2dp"
            android:textColor="#808a87"
            android:text="2018-1-31"/>
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@drawable/line2"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:minHeight="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="12dp"
        android:paddingTop="15dp"
        >
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="报修人地址"
            android:textSize="15sp"

            />

        <TextView
            android:id="@+id/tv_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="92dp"
            android:layout_marginStart="92dp"
            android:textSize="15sp"
            android:paddingLeft="20dp"
            android:paddingTop="2dp"
            android:textColor="#808a87"
            android:text="北京市朝阳区幸福小区"/>
    </RelativeLayout>
    <View
    android:layout_width="wrap_content"
    android:layout_height="1dp"
    android:background="@drawable/line2"
    />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:minHeight="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="12dp"
        android:paddingTop="15dp"
        >
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="服务人员"
            android:textSize="15sp"

            />

        <TextView
            android:id="@+id/tv_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="92dp"
            android:layout_marginStart="92dp"
            android:textSize="15sp"
            android:paddingLeft="20dp"
            android:paddingTop="2dp"
            android:textColor="#808a87"
            android:text="张师傅"/>
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@drawable/line2"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:minHeight="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="12dp"
        android:paddingTop="15dp"
        >
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="报修项目"
            android:textSize="15sp"

            />

        <TextView
            android:id="@+id/tv_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="92dp"
            android:layout_marginStart="92dp"
            android:textSize="15sp"
            android:paddingLeft="20dp"
            android:paddingTop="2dp"
            android:textColor="#808a87"
            android:text="门窗"/>
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@drawable/line2"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:minHeight="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="12dp"
        android:paddingTop="15dp"
        >
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="联系工人"
            android:textSize="15sp"

            />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="92dp"
            android:layout_marginStart="92dp"
            android:textSize="15sp"
            android:paddingLeft="20dp"
            android:paddingTop="2dp"
            android:textColor="#808a87"
            android:text="13942089345"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_phone"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"
            android:paddingLeft="10dp"
            android:src="@drawable/phone"/>
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@drawable/line2"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:minHeight="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="12dp"
        android:paddingTop="15dp"
        >
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="联系客服"
            android:textSize="15sp"

            />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="92dp"
            android:layout_marginStart="92dp"
            android:textSize="15sp"
            android:paddingLeft="20dp"
            android:paddingTop="2dp"
            android:textColor="#808a87"
            android:text="0312-345678"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_phone"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"
            android:paddingLeft="10dp"
            android:src="@drawable/phone"/>
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@drawable/line2"
        />



</LinearLayout>