<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cottee.myproperty.activity.AddSubActivity">
    <include layout="@layout/layout_title"/>
    <ImageView
        android:layout_marginTop="40dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/img_logo"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="爱尚家"
        android:textSize="18dp"
        android:textColor="@color/theme"
        />
    <EditText
        android:layout_marginTop="50dp"
        android:background="@drawable/rect"
        android:id="@+id/et_sub_account"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingTop="8dp"
        android:paddingBottom="10dp"
        android:textColorHint="@color/gray3"
        android:textSize="16sp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:hint="请输入需要添加子账户的邮箱"/>
    <EditText
        android:layout_marginTop="10dp"
        android:background="@drawable/rect"
        android:id="@+id/et_sub_remark"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingTop="8dp"
        android:paddingBottom="10dp"
        android:textColorHint="@color/gray3"
        android:textSize="16sp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:hint="请输入需要添加子账户的备注"/>

    <EditText
        android:layout_marginTop="10dp"
        android:background="@drawable/rect"
        android:id="@+id/et_sub_phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingTop="8dp"
        android:paddingBottom="10dp"
        android:textColorHint="@color/gray3"
        android:textSize="16sp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:hint="请输入需要添加子账户的电话"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

    <Button
        android:id="@+id/bt_add_account"
        android:layout_width="200dp"
        android:background="@drawable/selector_button_login"
        android:layout_height="30dp"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:text="添加"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/img_bottom_view" />
    </RelativeLayout>
</LinearLayout>
