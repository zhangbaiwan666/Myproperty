<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/layout_title"/>
    <ImageView
        android:layout_marginTop="40dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/img_logo"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="注册邮箱"
        android:textSize="18dp"
        android:textColor="@color/theme"
        />

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:minHeight="50dp">

        <EditText
            android:textSize="16sp"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/rect"
            android:textColorHint="#BEBEBE"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/et_input_email"
            android:hint="请输入您的邮箱账号"
            />
        <Button
            android:id="@+id/btn_emailJudge"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="5dp"
            android:visibility="invisible"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:minHeight="50dp"
        >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <EditText
        android:id="@+id/et_input_VerificationCode"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/rect"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:hint="请输入邮箱验证码"
        android:paddingLeft="15dp"
        android:paddingTop="8dp"
        android:textColorHint="#BEBEBE"
        android:textSize="16sp" />
    <Button
        android:id="@+id/btn_send_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="发送验证码"/>


</RelativeLayout>

    </RelativeLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/line"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:minHeight="50dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp">


        <TextView
            android:id="@+id/tv_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送验证码即阅读并同意用户须知及隐私协定"
            android:textColor="#BEBEBE"
            android:layout_alignParentRight="true"
            android:textSize="12sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">

        <Button
            android:text="注册"
            android:id="@+id/btn_register"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/selector_button_login"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="15sp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/img_bottom_view" />

    </RelativeLayout>


</LinearLayout>
