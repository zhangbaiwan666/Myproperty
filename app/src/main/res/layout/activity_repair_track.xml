<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"

    >
    <RelativeLayout

        android:id="@+id/rel_genzongchuli"
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:minHeight="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="12dp"
        >
        <Button

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:background="@drawable/back"
            android:onClick="back"
            android:paddingBottom="10dp"
            android:paddingTop="40dp"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="跟踪处理"
            android:textSize="20dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="20dp">
        <ImageView
            android:id="@+id/repair_person"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/repair_person"
            />
        <TextView
            android:layout_toRightOf="@id/repair_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textSize="15dp"
            android:text="维修员工信息"/>

    </RelativeLayout>
    <RelativeLayout

        android:id="@+id/rel_jigong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5"
        android:paddingTop="10dp"

       >

        <ImageView
            android:id="@+id/imv_photo"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:paddingLeft="10dp"
            android:src="@drawable/ff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_trackOfworker"
            android:layout_alignBottom="@id/tv_trackOfworker"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/imv_photo"
            android:layout_toRightOf="@+id/imv_photo"

            android:paddingTop="10dp"
            android:text="姓名:"/>
        <TextView
            android:id="@+id/tv_trackOfworker"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/imv_photo"
            android:textSize="15dp"
            android:paddingLeft="50dp"
            android:paddingTop="10dp"
            android:text="李师傅"/>
        <TextView
            android:id="@+id/tv_serProject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_trackOfworker"
            android:paddingLeft="10dp"
            android:text="项目:"
            android:textSize="15dp"
            android:paddingTop="5dp"
            android:layout_toRightOf="@id/imv_photo"/>

        <TextView
            android:id="@+id/tv_serProjectOftrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_trackOfworker"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@id/tv_serProject"
            android:layout_toRightOf="@id/tv_serProject"
            android:paddingTop="5dp"
            android:text="aaaaaaaaaaa"
            android:textSize="15dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:background="#F5F5F5">
        <ImageView
            android:id="@+id/repair_track"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/repair_track"
            />
        <TextView
            android:layout_toRightOf="@id/repair_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textSize="15dp"
            android:text="报修跟踪"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@id/rel_jigong"
        android:paddingTop="25dp">

        <ImageView
            android:id="@+id/imv_zhengzaichuli"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingTop="17dp"
            android:src="@drawable/genzong"/>
        <TextView
            android:id="@+id/tv_baoxiuxinxi"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/imv_zhengzaichuli"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textColor="#808a87"
            android:text="报修信息已发送"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_baoxiuxinxi"
            android:paddingLeft="10dp"
            android:text="2017-12-13 13:12"
            android:textSize="15dp"
            android:textColor="#808a87"
            android:layout_toRightOf="@id/imv_zhengzaichuli"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel2"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/imv_zhengzaichuli1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingTop="17dp"
            android:src="@drawable/genzong"/>

        <TextView
            android:id="@+id/tv_baoxiuxinxi1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/imv_zhengzaichuli1"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="李师傅已接收"
            android:textColor="#808a87"
            android:textSize="15dp"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_baoxiuxinxi1"
            android:layout_toRightOf="@id/imv_zhengzaichuli1"
            android:paddingLeft="10dp"
            android:text="2017-12-13 13:20"
            android:textColor="#808a87"
            android:textSize="15dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/rel2"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/imv_zhengzaichuli2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingTop="17dp"
            android:src="@drawable/zhengzaichuli"/>

        <TextView
            android:id="@+id/tv_baoxiuxinxi2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/imv_zhengzaichuli2"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="正在处理"
        android:textColor="#ff9800"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/repair_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_baoxiuxinxi2"
            android:layout_toRightOf="@id/imv_zhengzaichuli2"
            android:paddingLeft="10dp"
            android:text="2017-12-13 13:12"
            android:textColor="#808a87"
            android:textSize="15dp"/>

    </RelativeLayout>


