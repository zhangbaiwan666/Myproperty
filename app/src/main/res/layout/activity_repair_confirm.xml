<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:minHeight="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="12dp"
        >
        <Button

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:background="@drawable/back"
            android:onClick="back"
            android:paddingBottom="10dp"
            android:paddingTop="40dp"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="录入保修单"
            android:textSize="20dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        >

        <ImageView
            android:id="@+id/imv_dingwei"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:paddingTop="17dp"
            android:paddingLeft="25dp"
            android:src="@drawable/dingwei"/>
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/imv_dingwei"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:paddingTop="25dp"

            android:text="报修地址:"/>
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imv_dingwei"
            android:layout_below="@id/tv"
            android:paddingLeft="10dp"
            android:text="辽宁省大连市旅顺口区大连外国语大学"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignBottom="@+id/imv_dingwei"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:src="@drawable/lookaddress"/>
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@drawable/confirm_line"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#F5F5F5"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/imv_workerphoto"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:paddingLeft="10dp"
            android:src="@drawable/ff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="技工姓名:"
            android:paddingTop="5dp"
            android:paddingLeft="90dp"/>
        <TextView
            android:id="@+id/tv_confirmOfworker"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/imv_workerphoto"
            android:textSize="15dp"
            android:paddingLeft="90dp"
            android:paddingTop="5dp"
            android:text="李师傅"/>
        <TextView
            android:id="@+id/tv_serProject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_confirmOfworker"
            android:paddingLeft="20dp"
            android:text="服务项目:"
            android:paddingTop="10dp"
            android:layout_toRightOf="@id/imv_workerphoto"/>
        <TextView
            android:id="@+id/tv_serverProject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="a"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:layout_toRightOf="@id/tv_serProject"
            android:layout_below="@id/tv_confirmOfworker"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:minHeight="50dp"
        android:paddingRight="12dp"
         android:paddingTop="12dp"
        android:paddingLeft="10dp"
        >
        <TextView
            android:id="@+id/tv_takePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:text="请上传照片"
            android:textSize="15dp"
            />
        <ImageView
            android:id="@+id/imv_takePhotoOne"
            android:layout_toRightOf="@id/tv_takePicture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            android:src="@drawable/camera"
            android:onClick="takePhotoOne"/>

        <ImageView
            android:id="@+id/imv_takePhotoTwo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignBottom="@+id/imv_takePhotoOne"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/imv_takePhotoOne"
            android:layout_toRightOf="@+id/imv_takePhotoOne"
            android:paddingLeft="20dp"
            android:onClick="takePhotoTwo"
            android:src="@drawable/camera"/>

        <ImageView
            android:id="@+id/imv_takePhotoThree"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignBottom="@+id/imv_takePhotoTwo"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/imv_takePhotoTwo"
            android:layout_toRightOf="@+id/imv_takePhotoTwo"
            android:paddingLeft="20dp"
            android:onClick="takePhotoThree"
            android:src="@drawable/camera"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:minHeight="50dp"
        android:paddingRight="12dp"

        android:paddingLeft="10dp"
        android:background="#F5F5F5"
        >
        <TextView
            android:id="@+id/tv_beizhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注："
            android:paddingTop="10dp"
            android:textSize="15dp"
            />
        <EditText
            android:id="@+id/et_inputInfo"
            android:layout_width="500sp"
            android:layout_height="90sp"
            android:hint="请输入具体报修部位"
            android:background="@drawable/beizhu"
            android:textSize="15dp"
            android:gravity="top|left"

            android:layout_toRightOf="@id/tv_beizhu"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:paddingLeft="60dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="确定"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:onClick="Sure"
            android:background="@drawable/shape_btn_login"/>
    </RelativeLayout>
</LinearLayout>