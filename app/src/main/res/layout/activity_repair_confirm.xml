<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:minHeight="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="12dp"
        >
        <Button

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:background="@drawable/back"
            android:onClick="back"
            android:paddingBottom="10dp"
            android:paddingTop="40dp"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="录入保修单"
            android:textSize="20dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#ff9800">

        <ImageView
            android:id="@+id/imv_dingwei"
            android:layout_width="35dp"
            android:layout_height="55dp"
            android:paddingTop="17dp"
            android:paddingLeft="25dp"
            android:src="@drawable/dingwei"/>
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/imv_dingwei"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:paddingTop="25dp"
            android:textColor="#fff"
            android:text="报修地址:"/>
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imv_dingwei"
            android:layout_below="@id/tv"
            android:textColor="#fff"
            android:text="辽宁省大连市旅顺口区大连外国语大学"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/imv_workerphoto"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ff"/>
        <TextView
            android:id="@+id/tv_confirmOfworker"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/imv_workerphoto"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="李师傅"/>
        <TextView
            android:id="@+id/tv_serProject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_confirmOfworker"
            android:paddingLeft="10dp"
            android:text="服务项目:"
            android:paddingTop="10dp"
            android:layout_toRightOf="@id/imv_workerphoto"/>
        <TextView
            android:id="@+id/tv_serverProject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="a"
            android:paddingTop="10dp"
            android:layout_toRightOf="@id/tv_serProject"
            android:layout_below="@id/tv_confirmOfworker"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:minHeight="50dp"
        android:paddingRight="12dp"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        >
        <TextView
            android:id="@+id/tv_beizhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="备注："
            android:textSize="15dp"
            />
        <EditText
            android:id="@+id/et_inputInfo"
            android:layout_width="500sp"
            android:layout_height="90sp"
            android:hint="请输入具体信息"
            android:background="@drawable/beizhu"
            android:paddingTop="10dp"
            android:textSize="15dp"
            android:gravity="top|left"
            android:layout_toRightOf="@id/tv_beizhu"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:minHeight="50dp"
        android:paddingRight="12dp"

        android:paddingLeft="10dp"
        >
        <TextView
            android:id="@+id/tv_takePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="请上传照片"
            android:textSize="15dp"
            />
        <ImageView
            android:id="@+id/imv_takePhoto"
            android:layout_toRightOf="@id/tv_takePicture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            android:src="@drawable/camera"
            android:onClick="takePhoto"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingLeft="60dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="确定"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:onClick="Sure"
            android:background="@drawable/rect"/>
    </RelativeLayout>
</LinearLayout>