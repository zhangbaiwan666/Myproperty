<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ratingbar="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imv_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            android:src="@drawable/ff"
            />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/imv_photo"
    android:text="姓名:"
    android:paddingTop="3dp"
    android:textSize="17dp"/>


        <TextView
            android:id="@+id/tv_jigong"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/imv_photo"
            android:paddingLeft="60dp"
            android:text="李师傅"
            android:paddingTop="3dp"
            android:textSize="17dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imv_photo"
            android:text="评价:"
            android:paddingTop="35dp"
            android:textSize="17dp"/>
        <cottee.myproperty.view.StarLinearLayout
            android:id="@+id/starBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_jigong"
             android:paddingTop="4dp"
            android:layout_toRightOf="@id/imv_photo"
            android:paddingLeft="60dp"/>


    </RelativeLayout>

</LinearLayout>