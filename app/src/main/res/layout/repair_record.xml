<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="340dp"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:layout_gravity="center"
              android:paddingLeft="20dp"

              android:descendantFocusability="blocksDescendants">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        >
        <include layout="@layout/payfee_time"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/repair_record"
        >
    <LinearLayout

    android:layout_width="match_parent"
    android:layout_height="37sp"
    android:minHeight="50dp"
    android:orientation="horizontal"

    >


        <TextView
            android:id="@+id/repair_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="155dp"
            android:paddingTop="12dp"
            android:text="查看订单详情"/>


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingTop="20dp"
        android:paddingRight="5dp"
        android:src="@drawable/lookaddress"/>
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/line2"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textSize="13dp"
            android:textColor="#808080"
            android:text="报修项目："/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="卫生间水龙头"
            android:textColor="#808080"
            android:textSize="13dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:textColor="#e3170d"
            android:textSize="12dp"
            android:paddingLeft="10dp"
            android:text="待处理"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageview_item"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:src="@drawable/dengpao"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:src="@drawable/door"
            android:layout_marginLeft="20dp"
           />
        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:src="@drawable/shuilongtou"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
