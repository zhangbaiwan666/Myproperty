<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/White"
    tools:context="cottee.myproperty.activity.DelateSubActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <include layout="@layout/layout_title"/>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_property_info"
        android:layout_below="@id/ll_title"
        android:background="@drawable/activity_background"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小宇物业"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xx号楼"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xx单元"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxx室"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="70dp"
            android:id="@+id/ll_show_sub_info"
            android:layout_below="@+id/ll_property_info"
            android:padding="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_sub_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:text="儿子"/>
            <TextView
                android:id="@+id/tv_sub_email"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮箱："/>
            <ListView
                android:id="@+id/list_sub_phone"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话"/>

        </LinearLayout>
        //可修改的subinfo
        <LinearLayout
            android:layout_marginLeft="70dp"
            android:visibility="gone"
            android:id="@+id/ll_modify_sub_info"
            android:layout_below="@+id/ll_property_info"
            android:padding="25dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/et_sub_remark"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:textSize="12dp"
                android:text="儿子"/>
            <EditText
                android:id="@+id/et_sub_id"
                android:layout_marginTop="13dp"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:textSize="12dp"
                android:text="邮箱："/>
            //电话的添加框
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="match_parent">

                <ListView
                    android:descendantFocusability="afterDescendants"
                    android:id="@+id/list_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null" />

                <Button
                    android:id="@+id/button"
                    android:textSize="12dp"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:layout_alignParentRight="true"
                    android:text="添加电话" />

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/ll_property_info"
            android:padding="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:text="昵称："/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮箱："/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话："/>

        </LinearLayout>
    </RelativeLayout>

    <Button
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/btn_delete_sub"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="删除该家庭成员"
        android:textSize="12dp"
        android:background="@drawable/selector_button_login"
        android:layout_alignParentBottom="true"/>
    <Button
        android:visibility="gone"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/btn_modify_sub"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="保存修改信息"
        android:textSize="12dp"
        android:background="@drawable/selector_button_login"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
