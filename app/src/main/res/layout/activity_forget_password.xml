<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/mainbackground"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:minHeight="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="12dp"
        >
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="back"
            android:src="@drawable/back"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:minHeight="50dp"
        android:layout_gravity="center"
        android:paddingBottom="30dp"
        android:paddingRight="12dp">
        <ImageView
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:background="@drawable/appicon"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/line"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:minHeight="50dp"
        android:paddingLeft="14dp"
        android:paddingRight="12dp"

        >

        <EditText
            android:id="@+id/et_forget_input_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:hint="邮箱账号"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:textColorHint="#BEBEBE"
            android:textSize="20sp"
            />
        <Button
            android:id="@+id/btn_emailJudge"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="5dp"
            android:visibility="invisible"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:minHeight="50dp"
        android:paddingLeft="14dp"
        android:paddingRight="12dp"

        >

        <EditText
            android:id="@+id/et_input_Verification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:hint="请输入邮箱验证码"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:textColorHint="#BEBEBE"
            android:textSize="20sp"
            />
        <Button
            android:id="@+id/get_Verification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="获取验证码"/>
    </RelativeLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/line"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="500dp"
        android:layout_height="40dp"
        android:minHeight="50dp"
        android:paddingLeft="200dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingLeft="20dp">btn_forgetr_register
       <Button
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/btn_forgetr_register"
           android:text="身份验证"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="提交验证码"
            android:textColor="#fff"
            android:background="#566471"
            android:textSize="15sp"
            android:visibility="gone"
            android:onClick="submitCode"/>
    </RelativeLayout>


</LinearLayout>
